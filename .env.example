# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Database (Direct connection for Drizzle ORM)
# Use direct connection (port 5432), not pooler (port 6543)
DATABASE_URL=postgresql://postgres:your-password@db.your-project-id.supabase.co:5432/postgres

# Monzo API (Phase 2 - Optional)
MONZO_CLIENT_ID=
MONZO_CLIENT_SECRET=
MONZO_REDIRECT_URI=http://localhost:3000/api/auth/monzo/callback

# Google Sheets API
# Create at: https://console.cloud.google.com/apis/credentials
# Enable: Google Sheets API
GOOGLE_SHEETS_API_KEY=your-google-sheets-api-key

# Security
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=

# Cron Secret (for scheduled sync via Vercel)
CRON_SECRET=
